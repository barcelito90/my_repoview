<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_login" inherit_id="web.login">
            <xpath expr="//div[hasclass('field-password')]" position="after" >
            
            <div class="mb-3 field-phone">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" placeholder="Phone" name="phone" t-att-value="phone" id="phone" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocapitalize="off"/>
                </div>
                <div class="mb-3 field-sex">
                    <label for="sex" class="form-label">Sex</label>
                    <input type="text" placeholder="Sex" name="sex" t-att-value="sex" id="sex" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required"  autocapitalize="off"/>
                </div>
            </xpath>
            
    </template>   
    
</odoo>
